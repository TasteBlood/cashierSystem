<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:top="-3dip" android:left="-3dip" android:bottom="-3dip" android:right="1dip">
                <shape android:shape="rectangle">
                    <stroke android:width="2dip" android:color="@color/frame_yellow" />
                    <solid android:color="@color/frame_white_trans_30" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>