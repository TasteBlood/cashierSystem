<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.cloudcreativity.cashiersystem.model.LogModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="@{()->model.onBack()}"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_back"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dip"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/frame_gray_343"
                    android:text="操作详情"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dip"
                    android:text="上线时间："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.startTime}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dip"
                    android:text="下线时间："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.exitTime}"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginTop="10dip"
                android:background="@color/frame_yellow"/>
        </LinearLayout>
        <!--query items-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:paddingStart="10dip"
            android:paddingEnd="10dip"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/rg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onCheckedChanged="@{(rb,id)->model.onCheckChange(rb,id)}"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_log_cashier"
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:background="@drawable/selector_query_bg"
                    android:gravity="center"
                    android:text="收银"/>
                <RadioButton
                    android:id="@+id/rb_log_create"
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:background="@drawable/selector_query_bg"
                    android:layout_marginStart="40dip"
                    android:gravity="center"
                    android:text="创建会员"/>
                <RadioButton
                    android:id="@+id/rb_log_edit"
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:background="@drawable/selector_query_bg"
                    android:layout_marginStart="40dip"
                    android:gravity="center"
                    android:text="修改会员"/>
                <RadioButton
                    android:id="@+id/rb_log_recharge"
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:background="@drawable/selector_query_bg"
                    android:layout_marginStart="40dip"
                    android:gravity="center"
                    android:text="会员充值"/>
            </RadioGroup>
        </LinearLayout>

        <!--table -->
        <android.support.v7.widget.CardView
            android:layout_marginTop="20dip"
            android:layout_marginEnd="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginBottom="10dip"
            android:elevation="5dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--cashier log-->
                <LinearLayout
                    android:id="@+id/layoutCash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#FFF2EDEC"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="操作时间"/>
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="订单号"/>
                    </LinearLayout>
                    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                        android:id="@+id/refreshCashier"
                        app:tr_autoLoadMore="true"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rcv_cashier"
                            android:adapter="@{model.cashAdapter}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
                </LinearLayout>
                <!--create log-->
                <LinearLayout
                    android:id="@+id/layoutCreate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#FFF2EDEC"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="操作时间"/>
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="会员ID"/>
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="会员手机号"/>
                    </LinearLayout>
                    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                        android:id="@+id/refreshCreate"
                        app:tr_autoLoadMore="true"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rcv_create"
                            android:adapter="@{model.createAdapter}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
                </LinearLayout>
                <!--edit log-->
                <LinearLayout
                    android:id="@+id/layoutEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#FFF2EDEC"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="操作时间"/>
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="会员ID"/>
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="会员手机号"/>
                    </LinearLayout>
                    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                        android:id="@+id/refreshEdit"

                        app:tr_autoLoadMore="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rcv_edit"
                            android:adapter="@{model.editAdapter}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
                </LinearLayout>
                <!--recharge log-->
                <LinearLayout
                    android:id="@+id/layoutRecharge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#FFF2EDEC"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="操作时间"/>
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="会员ID"/>
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="会员手机号"/>
                        <TextView
                            android:padding="10dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="操作"/>
                    </LinearLayout>
                    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                        android:id="@+id/refreshRecharge"

                        app:tr_autoLoadMore="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rcv_recharge"
                            android:adapter="@{model.rechargeAdapter}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>