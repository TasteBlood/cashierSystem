<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.cloudcreativity.cashiersystem.model.OpenOrderModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginStart="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginEnd="5dip"
            android:elevation="5dip"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->model.onBack()}"
                        android:padding="10dip"
                        android:src="@mipmap/icon_back"/>
                    <android.support.v7.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dip"
                        android:onClick="@{()->model.openList()}"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_open_list"/>
                </RelativeLayout>
                <!--会员信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dip"
                    android:gravity="center_vertical"
                    android:paddingEnd="10dip"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号:"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:inputType="number"
                        android:textSize="25sp"
                        android:imeOptions="actionDone"
                        android:gravity="center"
                        app:addTextChangedListener="@{model.watcher}"
                        android:text="@={model.member.mobile}"
                        android:hint="请输入手机号"
                        android:background="@null" />
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dip"
                        android:layout_marginEnd="10dip"
                        android:background="@color/frame_yellow"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员ID:"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:text="@{model.member.id==0?@string/str_empty:String.valueOf(model.member.id)}"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--table content-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical">
                    <!--table header-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F2EDEC"
                        android:padding="5dip"
                        android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="商品名称"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="商品ID"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="单位"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="单价"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="折扣"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="数量"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="金额"/>
                    </LinearLayout>
                    <!--table content-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_open_order"
                        android:layout_width="match_parent"
                        android:adapter="@{model.adapter}"
                        android:layout_weight="1"
                        android:layout_height="0dip" />
                    <!--table-foot-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F2EDEC"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dip">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:text="合计："/>
                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center_vertical" />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dip">
                            <TextView
                                android:id="@+id/tv_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:text="折扣终价(-0.0)："/>
                            <TextView
                                android:id="@+id/tv_discount_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center_vertical"
                                android:text=""/>
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:padding="10dip">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:text="备注："/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dip"
                                android:textSize="18sp"
                                android:background="@drawable/shape_input_gray_bg_line"
                                android:onClick="@{()->model.onEditClick()}"
                                android:text="@{model.remark}"
                                android:hint="请输入备注"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:background="@color/gray_d1d1d1"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_check"
                            android:background="@drawable/selector_green_btn"
                            android:layout_margin="10dip"
                            android:textColor="@color/white"
                            android:text="结单"
                            android:onClick="@{()->model.onSubmitClick()}"
                            android:layout_width="match_parent"
                            android:layout_height="60dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <FrameLayout
            android:id="@+id/frameGoods2"
            android:layout_width="0dip"
            android:layout_weight="1.6"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>