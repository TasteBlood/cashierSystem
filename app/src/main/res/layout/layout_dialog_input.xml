<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable
            name="utils"
            type="com.cloudcreativity.cashiersystem.utils.InputDialogUtils" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dip"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="6"
                android:padding="10dip"
                android:gravity="top"
                android:text="@={utils.content}"
                android:background="@drawable/shape_input_yellow_bg"
                android:hint="请输入内容"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_top_line_gray_1px"
                android:gravity="center"
                android:onClick="@{()->utils.onCancel()}"
                android:text="@string/str_cancel"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_yellow_btn"
                android:gravity="center"
                android:onClick="@{()->utils.onOk()}"
                android:text="@string/str_ok"/>
        </LinearLayout>
    </LinearLayout>
</layout>