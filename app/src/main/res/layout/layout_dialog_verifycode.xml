<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="utils"
            type="com.cloudcreativity.cashiersystem.utils.VerifyCodeDialogUtils" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dip"
            android:text="验证"
            android:textColor="@color/white"
            android:background="#94D2B9"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="40dip"
            android:paddingEnd="40dip"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_identity"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:onClick="@{()->utils.onRefresh()}"
                android:src="@color/gray_d1d1d1"/>
            <android.support.v7.widget.AppCompatEditText
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:padding="5dip"
                android:inputType="number"
                android:textColor="@color/gray_515151"
                android:background="@drawable/shape_input_green_bg"
                android:text="@{utils.code}"
                android:hint="请输入图形验证码"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:textColor="@color/frame_gray_666"
                android:background="@drawable/shape_top_line_gray_1px"
                android:onClick="@{()->utils.dismiss()}"
                android:text="取消"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/selector_green_btn_no_corner"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:textColor="@color/white"
                android:onClick="@{()->utils.onOk()}"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>
</layout>