<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dip"
        android:text="充值"
        android:textColor="@color/white"
        android:background="#94D2B9"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="80dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_money"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:background="@drawable/selector_yellow_btn"
            android:layout_weight="1"
            android:text="现金"/>
        <Button
            android:id="@+id/btn_mobile"
            android:layout_width="0dip"
            android:layout_marginStart="20dip"
            android:background="@drawable/selector_blue_btn"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:text="手机"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_cancel_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dip"
            android:textColor="@color/frame_gray_666"
            android:background="@drawable/shape_top_line_gray_1px"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>