<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="com.cloudcreativity.cashiersystem.entity.OrderEntity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="10dip"
            android:text="@{item.id}"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="10dip"
            android:text="@{String.valueOf(item.money)}"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="10dip"
            android:text="@{item.state==0?@string/state_paied:@string/state_unpaied}"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="10dip"
            android:textSize="12sp"
            android:text="@{item.formatWay()}"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="10dip"
            android:text="@{item.createTime}"/>
        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:textSize="12sp"
                android:background="@drawable/selector_yellow_btn"
                android:layout_gravity="center"
                android:button="@null"
                android:text="查看详情"/>
        </FrameLayout>

    </LinearLayout>
</layout>