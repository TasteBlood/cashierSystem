<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="utils"
            type="com.cloudcreativity.cashiersystem.utils.CallDialogUtils" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dip"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_515151"
            android:textSize="25sp"
            android:text="@{utils.goodsName}"/>
        <LinearLayout
            android:layout_marginTop="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_weight"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_input_yellow_bg"
                android:inputType="phone"
                android:hint="请输入重量"
                android:text="@={utils.finalWeight}"
                android:gravity="center"
                android:padding="20dip"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:textSize="25sp"
                android:text="@{utils.unit}"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子秤开关:"/>
            <Switch
                android:id="@+id/switch_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:thumb="@null"
                android:track="@null"
                android:button="@drawable/switch_selector"
                android:textOff="关闭"
                android:textOn="打开"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/selector_yellow_btn"
            android:layout_marginTop="40dip"
            android:layout_marginBottom="5dip"
            android:textSize="25sp"
            android:layout_marginEnd="5dip"
            android:layout_marginStart="5dip"
            android:onClick="@{()->utils.onOk()}"
            android:text="确定"/>
    </LinearLayout>
</layout>