<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.cloudcreativity.cashiersystem.model.MessageListModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="10dip"
            android:paddingEnd="10dip"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/frame_gray_343"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"
                android:text="消息"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginStart="10dip"
            android:layout_marginEnd="10dip"
            android:background="@color/frame_yellow"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:paddingStart="10dip"
            android:paddingEnd="10dip">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："/>
            <RadioGroup
                android:id="@+id/rg_type"
                android:onCheckedChanged="@{(rb,id)->model.onCheckChange1(rb,id)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_message_all"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:paddingStart="13dip"
                    android:paddingEnd="13dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:textColor="@color/frame_gray_343"
                    android:background="@drawable/selector_query_bg"
                    android:text="全部"/>
                <RadioButton
                    android:id="@+id/rb_message_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:paddingStart="13dip"
                    android:paddingEnd="13dip"
                    android:layout_marginStart="10dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:textColor="@color/frame_gray_343"
                    android:background="@drawable/selector_query_bg"
                    android:text="通知"/>
                <RadioButton
                    android:id="@+id/rb_message_news"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:paddingStart="13dip"
                    android:paddingEnd="13dip"
                    android:layout_marginStart="10dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:textColor="@color/frame_gray_343"
                    android:background="@drawable/selector_query_bg"
                    android:text="资讯"/>
            </RadioGroup>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dip"
                android:text="状态："/>
            <RadioGroup
                android:id="@+id/rg_state"
                android:onCheckedChanged="@{(rb,id)->model.onCheckChange2(rb,id)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_message_all1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:paddingStart="13dip"
                    android:paddingEnd="13dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:textColor="@color/frame_gray_343"
                    android:background="@drawable/selector_query_bg"
                    android:text="全部"/>
                <RadioButton
                    android:id="@+id/rb_message_read"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:paddingStart="13dip"
                    android:paddingEnd="13dip"
                    android:layout_marginStart="10dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:textColor="@color/frame_gray_343"
                    android:background="@drawable/selector_query_bg"
                    android:text="已读"/>
                <RadioButton
                    android:id="@+id/rb_message_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:button="@null"
                    android:paddingStart="13dip"
                    android:paddingEnd="13dip"
                    android:layout_marginStart="10dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:textColor="@color/frame_gray_343"
                    android:background="@drawable/selector_query_bg"
                    android:text="未读"/>
            </RadioGroup>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginBottom="10dip"
            android:elevation="5dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--table header-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F2EDEC"
                    android:padding="10dip"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="标题"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="类型"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="发布时间"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="状态"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="操作"/>
                </LinearLayout>
                <!--table content-->
                <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                    android:id="@+id/refreshMessage"
                    app:tr_autoLoadMore="true"
                    app:tr_head_height="50dip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_message_list"
                        android:adapter="@{model.adapter}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>