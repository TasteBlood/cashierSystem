<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.cloudcreativity.cashiersystem.model.MemberPayModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/frame_gray_f2edec"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->model.onBack()}"
                    android:src="@mipmap/icon_back"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dip"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/frame_gray_343"
                    android:text="会员消费记录"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dip"
                    android:text="会员ID："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(model.memberEntity.id)}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dip"
                    android:text="会员手机号："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.memberEntity.mobile}"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginTop="10dip"
                android:background="@color/frame_yellow"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginStart="10dip"
            android:layout_marginEnd="10dip"
            android:layout_marginBottom="10dip"
            android:elevation="5dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFF2EDEC"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:padding="10dip"
                        android:layout_height="wrap_content"
                        android:text="消费时间"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:padding="10dip"
                        android:layout_height="wrap_content"
                        android:text="消费店铺"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:padding="10dip"
                        android:layout_height="wrap_content"
                        android:text="订单编号"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:padding="10dip"
                        android:layout_height="wrap_content"
                        android:text="支付金额"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:padding="10dip"
                        android:layout_height="wrap_content"
                        android:text="操作"
                        android:gravity="center"/>
                </LinearLayout>
                <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                    android:id="@+id/refreshPay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_pay"
                        android:adapter="@{model.adapter}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>