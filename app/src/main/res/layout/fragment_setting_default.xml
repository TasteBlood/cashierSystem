<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.cloudcreativity.cashiersystem.model.SettingDefaultModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dip"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/frame_gray_343"
                    android:text="设置中心"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginTop="10dip"
                android:background="@color/frame_yellow"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dip"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USB打印机设置"/>
                <LinearLayout
                    android:layout_marginTop="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_yellow_btn"
                        android:onClick="@{()->model.onConnectPrinterClick()}"
                        android:layout_marginTop="5dip"
                        android:layout_marginEnd="5dip"
                        android:layout_marginBottom="5dip"
                        android:text="连接USB打印机"/>
                    <Button
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_yellow_btn"
                        android:onClick="@{()->model.onTestPrintClick()}"
                        android:layout_marginStart="20dip"
                        android:layout_marginTop="5dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginEnd="5dip"
                        android:text="打印测试页"/>
                    <Button
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_yellow_btn"
                        android:onClick="@{()->model.onOpenCashBoxClick()}"
                        android:layout_marginStart="20dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:layout_marginEnd="5dip"
                        android:text="打开钱箱"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="收银设置"/>
                <LinearLayout
                    android:layout_marginTop="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_yellow_btn"
                        android:layout_marginTop="5dip"
                        android:layout_marginEnd="5dip"
                        android:layout_marginBottom="5dip"
                        android:text="设置一"/>
                    <Button
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_yellow_btn"
                        android:layout_marginStart="20dip"
                        android:layout_marginTop="5dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginEnd="5dip"
                        android:text="设置二"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="电子秤设置"/>
                <LinearLayout
                    android:layout_marginTop="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_yellow_btn"
                        android:layout_marginTop="5dip"
                        android:layout_marginEnd="5dip"
                        android:onClick="@{()->model.onCallOpenClick()}"
                        android:layout_marginBottom="5dip"
                        android:text="测试串口"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="扫码枪设置"/>
                <LinearLayout
                    android:layout_marginTop="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_yellow_btn"
                        android:layout_marginTop="5dip"
                        android:layout_marginEnd="5dip"
                        android:layout_marginBottom="5dip"
                        android:text="设置一"/>
                    <Button
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_yellow_btn"
                        android:layout_marginStart="20dip"
                        android:layout_marginTop="5dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginEnd="5dip"
                        android:text="设置二"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>