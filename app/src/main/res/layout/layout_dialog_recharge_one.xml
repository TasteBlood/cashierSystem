<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dip"
        android:text="充值"
        android:textColor="@color/white"
        android:background="#94D2B9"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dip"
        android:paddingEnd="20dip"
        android:paddingTop="80dip"
        android:gravity="center"
        android:paddingBottom="80dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/gray_515151"
            android:text="充值金额："/>
        <EditText
            android:id="@+id/et_money"
            android:inputType="number"
            android:layout_width="300dip"
            android:layout_height="50dip"
            android:background="@drawable/shape_input_green_bg"
            android:hint="请输入充值金额，200起"
            android:textColor="@color/frame_gray_343"
            android:gravity="center"
            android:padding="10dip"
            android:textSize="25sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_cancel_one"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dip"
            android:textColor="@color/frame_gray_666"
            android:background="@drawable/shape_top_line_gray_1px"
            android:text="取消"/>
        <TextView
            android:id="@+id/btn_ok_one"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/selector_green_btn_no_corner"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dip"
            android:textColor="@color/white"
            android:text="下一步"/>
    </LinearLayout>
</LinearLayout>