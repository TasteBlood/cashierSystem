<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="utils"
            type="com.cloudcreativity.cashiersystem.utils.ScanCodeDialog" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:padding="20dip"
        android:gravity="center_horizontal"
        android:focusable="true"
        android:touchscreenBlocksFocus="true"
        android:background="@color/white"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/et_code"
            android:text="@={utils.code}"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNone"
            android:hint="请输入支付码"
            android:background="@drawable/shape_input_yellow_bg"
            android:padding="20dip"
            android:textSize="30sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="40dip">
            <android.support.v7.widget.AppCompatTextView
                android:onClick="@{()->utils.onCancel()}"
                android:id="@+id/btn_cancel"
                android:layout_width="200dip"
                android:layout_height="60dip"
                android:textColor="@color/gray_515151"
                android:textSize="28sp"
                android:gravity="center"
                android:text="取消"/>
            <android.support.v7.widget.AppCompatButton
                android:onClick="@{()->utils.onOk()}"
                android:id="@+id/btn_pay"
                android:layout_marginStart="40dip"
                android:layout_width="200dip"
                android:layout_height="60dip"
                android:background="@drawable/selector_yellow_btn"
                android:textColor="@color/gray_515151"
                android:textSize="28sp"
                android:text="立即支付"/>
        </LinearLayout>
    </LinearLayout>
</layout>