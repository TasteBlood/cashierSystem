<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.cloudcreativity.cashiersystem.model.PersonalModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/frame_gray_343"
                    android:layout_gravity="start|center_vertical"
                    android:text="个人中心"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:paddingStart="10dip"
                        android:paddingEnd="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_blue_btn"
                        android:layout_marginEnd="20dip"
                        android:onClick="@{()->model.onChangePwd()}"
                        android:layout_margin="5dip"
                        android:text="修改密码"/>
                    <Button
                        android:paddingStart="10dip"
                        android:paddingEnd="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_red_btn_solid"
                        android:textColor="@color/white"
                        android:onClick="@{()->model.onLogout()}"
                        android:layout_margin="5dip"
                        android:text="退出登录"/>
                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginTop="10dip"
                android:background="@color/frame_yellow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:src="@mipmap/img_header_portrait"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dip"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/frame_gray_666"
                            android:text="用户名："/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{model.user.name}"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/frame_gray_666"
                                android:text="手机号："/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{model.user.mobile}"/>
                            <Button
                                android:paddingStart="10dip"
                                android:paddingEnd="10dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{()->model.onChangeMobile()}"
                                android:text="修改手机号"
                                android:layout_marginStart="10dip"
                                android:layout_marginBottom="5dip"
                                android:layout_marginTop="5dip"
                                android:layout_marginEnd="5dip"
                                android:background="@drawable/selector_blue_btn"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/frame_gray_666"
                                android:text="角色："/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{model.user.role.name}"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/frame_gray_666"
                                android:text="注册时间："/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{model.user.createTime}"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/frame_gray_666"
                        android:text="操作日志："/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.lastLogin}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:paddingStart="50dip"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_marginStart="10dip"
                        android:paddingStart="13dip"
                        android:paddingEnd="13dip"
                        android:paddingTop="3dip"
                        android:paddingBottom="3dip"
                        android:checked="true"
                        android:button="@null"
                        android:drawablePadding="10dip"
                        android:textColor="@color/frame_gray_343"
                        android:background="@drawable/selector_query_bg"
                        android:drawableEnd="@mipmap/icon_select_calendar"
                        android:textSize="20sp"
                        android:text="@{model.selectDate}"
                        android:onClick="@{()->model.onDateClick()}"
                        android:hint="请选择时间"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_marginStart="10dip"
                        android:background="@drawable/selector_yellow_btn"
                        android:onClick="@{()->model.onSearchClick()}"
                        android:layout_marginTop="5dip"
                        android:layout_marginEnd="5dip"
                        android:layout_marginBottom="5dip"
                        android:text="搜索"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>

            <!--table content-->
            <android.support.v7.widget.CardView
                android:elevation="5dip"
                android:layout_marginTop="5dip"
                android:orientation="vertical"
                android:layout_marginStart="10dip"
                android:layout_marginBottom="10dip"
                android:layout_marginEnd="10dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="10dip"
                       android:background="#F2EDEC"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="0dip"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="上线时间"
                           android:gravity="center"/>
                       <TextView
                           android:layout_width="0dip"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="下线时间"
                           android:gravity="center"/>
                       <TextView
                           android:layout_width="0dip"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="操作记录"
                           android:gravity="center"/>
                   </LinearLayout>
                   <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                       android:id="@+id/refreshLogs"
                       app:tr_autoLoadMore="true"
                       app:tr_head_height="50dip"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <android.support.v7.widget.RecyclerView
                           android:id="@+id/rcv_personal_log"
                           android:adapter="@{model.adapter}"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                   </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
               </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>